///////////////////////////////////////////
///////////////////////////////////////////
// Fragment Shader
///////////////////////////////////////////
///////////////////////////////////////////

#version 130

varying vec4 _color;				// in

out vec4 color;							// out

void main(void)
{
	color = texture(tex, _uv) + (vec4(0.33f, 0.42f, 0.18f, 1.0f) * vec4(_color));
}
